extends ./layout.pug

block content	
	canvas#clock(width="400" height="200")
	form(id="tijden", method="POST", action="/api/instellenvantijden")
		legend Wekker instellen
		label(for="opstaan") Opstaan
		input(type="time", name="opstaan")
			
		label(for="gaanSlapen") Gaan slapen
		input(type="time", name="gaanSlapen")
							
		label(for="slaaptijd") Slaaptijd
		input(type="time", name="slaaptijd", readonly)
						
		input(type="submit" value="Bevestingen")
					
	table.tijd(border="1")
		thead
			tr
				th Tijd gaan slapen
				th Gewenste tijd opstaan
				th Tijd opgestaan
				th Tijd geslapen
		tbody
			for result in results
				tr
					- const {tijdGaanSlapen, tijdOpgestaan, tijdGewenstOpstaan} = result
					- const {hours, minutes} = result.tijdGeslapen
					td= tijdGaanSlapen
					td= tijdGewenstOpstaan
					td= tijdOpgestaan
					td= hours + ':' + minutes
